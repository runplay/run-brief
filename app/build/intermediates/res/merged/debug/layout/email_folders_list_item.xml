<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:background="@color/background" 
    android:clickable="true"
    >
	<ImageView
	    android:id="@+id/email_folder_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <TextView 
	        android:id="@+id/email_folder_name"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
	        />
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="0dp"
		    android:orientation="horizontal"
		    android:layout_margin="0dp"
		    android:background="@color/background" 
		    android:clickable="true"
		    >
		    <TextView 
		        android:id="@+id/email_folder_count_total"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:drawableLeft="@drawable/collections_collection"
		        />
		    <TextView 
		        android:id="@+id/email_folder_count_unread"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:drawableLeft="@drawable/content_unread"
		        />
		    <TextView 
		        android:id="@+id/email_folder_count_new"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:drawableLeft="@drawable/content_new_email"
		        />
		    </LinearLayout>
	</LinearLayout>
</LinearLayout>