<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:background="@color/white_alpha"
    >
    <TextView
        android:id="@+id/welcome_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_head"
        />
    <TextView
        android:id="@+id/welcome_head_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_head_desc"
        />
    <TextView
        android:id="@+id/welcome_findway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/welcome_findway"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_features"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/welcome_findway_nav"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="@string/welcome_findway_nav"
            android:paddingRight="10dp"
            />
        <TextView
            android:id="@+id/welcome_findway_control"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="@string/welcome_findway_control"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/welcome_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_slide"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/welcome_slide_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/welcome_slide_left"
            android:paddingRight="10dp"
            />
        <TextView
            android:id="@+id/welcome_slide_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/welcome_slide_right"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/welcome_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_close"
        android:drawableRight="@drawable/navigation_collapse"
        android:layout_gravity="end|center_vertical"
        android:gravity="end|center_vertical"
        android:paddingTop="20dp"
        />
</LinearLayout>
</RelativeLayout>