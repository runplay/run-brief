<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="@color/background"
    android:clickable="true"
    android:isScrollContainer="true"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="0dp"
	    android:padding="5dp"
	    android:orientation="vertical"
		    style="@style/settings_item"
	     >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="0dp"
		    android:padding="5dp"
		    android:orientation="horizontal"

		     >
		    <ImageView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/device_proxy"
				/>
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_margin="0dp"
			    android:padding="5dp"
			    android:orientation="vertical"
			     >
			    <CheckBox 
			         android:id="@+id/settings_proxy_check"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:text="@string/settings_proxy_check"
			         />
			    <TextView 
			         android:id="@+id/settings_proxy_desc"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:text="@string/settings_proxy_desc"
			         />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/settings_proxy_expand"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="0dp"
		    android:padding="5dp"
		    
		    android:orientation="vertical"
		    android:visibility="gone"
		     >
			<EditText 
			    android:id="@+id/settings_proxy_ip"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:hint="@string/settings_proxy_ip"
			    android:layout_marginLeft="50dp"
			    />
			<EditText 
			    android:id="@+id/settings_proxy_ip_port"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:hint="@string/settings_proxy_ip_port"
			    android:layout_marginLeft="50dp"
			    />
			<CheckBox 
		         android:id="@+id/settings_proxy_auth_check"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:text="@string/settings_proxy_auth_check"
				 android:layout_marginLeft="50dp"
		         />
			<LinearLayout 
			    android:id="@+id/settings_proxy_expand_auth"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="0dp"
			    android:padding="5dp"
			    android:orientation="vertical"
			    android:visibility="gone"
			    
			    >
				<EditText 
				    android:id="@+id/settings_proxy_user"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:hint="@string/settings_proxy_user"
				    android:layout_marginLeft="100dp"
				    />
				<EditText 
				    android:id="@+id/settings_proxy_password"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:hint="@string/settings_proxy_password"
				    android:inputType="textPassword"
				    android:layout_marginLeft="100dp"
				    />
			</LinearLayout>

		</LinearLayout>
    </LinearLayout>
    
