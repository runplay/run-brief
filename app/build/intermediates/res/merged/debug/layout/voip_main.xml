<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="@color/background"
    tools:context=".Main$AccountsHomeFragment" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/background" 
     >
	 <TextView 
	     android:id="@+id/main_internal_ip_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/icon"
		android:text=""
		/>
	 <TextView 
	     android:id="@+id/main_external_ip_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/icon"
		android:text=""
		/>
	 <TextView 
	     android:id="@+id/main_nat_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/icon"
		android:text=""
		/>
  </LinearLayout>

<EditText
    android:id="@+id/textConnectionCode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10" >

    <requestFocus />
</EditText>

<EditText
    android:id="@+id/textConnectionPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10" />

</LinearLayout>