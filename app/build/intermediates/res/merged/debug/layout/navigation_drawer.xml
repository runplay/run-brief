<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    >


<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:paddingBottom="0dp"
        >
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_settings"
            android:layout_margin="6dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/btn_content_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/action_help"
                android:text="@string/label_help"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:layout_marginRight="20dp"
                android:paddingRight="3dp"
                />
            <ImageView
                android:id="@+id/btn_content_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/device_vibrate"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_sources"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
</RelativeLayout>

