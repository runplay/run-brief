<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
     >
	<RelativeLayout
        android:id="@+id/explore_file_check_pod"
	    android:layout_width="60dp"
	    android:layout_height="match_parent"
	    android:padding="0dp"
	    android:layout_margin="0dp"
        android:clickable="true"
		>
        <ImageView
            android:id="@+id/file_explore_check"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            />
		<ImageView
	        android:id="@+id/explore_file_type"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_margin="5dp"
		    />
	</RelativeLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="2dp"
         
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
		    <TextView
		        android:id="@+id/explore_item_head"
		        android:layout_width="0dp"
                android:layout_weight="2"
		        android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="middle"
                android:singleLine="true"
		         />
             <TextView
                 android:id="@+id/explore_item_size"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableRight="@drawable/content_save"
                 android:gravity="center_vertical"
                 android:textColor="@color/grey"
                 android:alpha="0.4"
                 />
         </LinearLayout>
		    <TextView
		        android:id="@+id/explore_item_date"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/grey"
                android:alpha="0.6"
		        />
     </LinearLayout>
	<ImageView
		android:id="@+id/file_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/action_about"
		android:layout_gravity="center"
		android:layout_margin="5dp"
		/>
</LinearLayout>