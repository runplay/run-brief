<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp"
    android:clickable="true" 
    >
	<RelativeLayout
		android:id="@+id/brief_actionbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	</RelativeLayout>
	<RelativeLayout android:id="@+id/locker_add_files"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="0dp"
	    android:padding="0dp"
	    android:background="@color/background" 
	    android:clickable="true" 
	    android:visibility="gone"
		android:layout_below="@id/brief_actionbar"
	    >
		
			<ListView android:id="@+id/locker_add_files_list"
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:gravity="center_vertical"
			   android:textStyle="bold"
			   android:textSize="12sp"
			   android:textColor="#000000"
			   android:padding="0dp"
			   android:layout_margin="0dp"
			/>
			<LinearLayout 
			   android:layout_width="match_parent"
			   android:layout_height="80dp"
			   android:layout_alignParentBottom="true"
			   android:orientation="horizontal"
               android:paddingBottom="20dp"
                android:background="@color/white"
			    >
				<Button 
				    android:id="@+id/fl_btn_cancel"
					   android:layout_width="0dp"
					   android:layout_weight="1"
					   android:layout_height="wrap_content"
					   android:text="@string/label_cancel"
					   android:layout_margin="5dp"
                       android:padding="5dp"
				    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/fl_btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/locker_btn_lock_now"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:clickable="false"
                        android:src="@drawable/i_pay_s"
                        />
                </RelativeLayout>

			    
			</LinearLayout>
		    <RelativeLayout 
		        android:id="@+id/fl_lock_buttons"
			   android:layout_width="match_parent"
			   android:layout_height="50dp"
			   android:layout_alignParentBottom="true"
			   android:orientation="horizontal"
			   android:background="@color/white_alpha"
			   android:visibility="gone"
			   android:clickable="true"
			    >
			</RelativeLayout>
	
	</RelativeLayout>
	<LinearLayout
	    android:id="@+id/locker_open"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="0dp"
		android:layout_below="@id/brief_actionbar"
	    android:orientation="vertical" 
	    android:visibility="gone"
	    >
		<LinearLayout
		    android:id="@+id/files_header"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"

		    android:orientation="horizontal"
		    android:paddingBottom="5dp"
		    >

            <TextView  android:id="@+id/files_directory_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/locker"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />


            <TextView
                android:id="@+id/files_directory_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_small"
                android:drawableRight="@drawable/s_folder"
                android:gravity="center_vertical|right"
                android:layout_margin="5dp"
                />
            <TextView  android:id="@+id/files_directory_info_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_small"
                android:drawableRight="@drawable/s_file"
                android:gravity="center_vertical|right"
                android:layout_margin="5dp"
                />

		</LinearLayout>
        <RelativeLayout
            android:id="@+id/locker_message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            >
            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView1"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/locker_action_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="400dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/locker"
                android:layout_below="@id/progressBar1"
                />
         </RelativeLayout>
		<ListView android:id="@+id/files_list"
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:gravity="center_vertical"
		   android:textStyle="bold"
		   android:textSize="12sp"
		   android:textColor="#000000"
		   android:padding="0dp"
		   android:layout_margin="0dp"
		/>

	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/locker_enter_pass_code"
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:background="@color/white"
		   android:orientation="vertical"
		   android:maxWidth="400dp"
		   android:padding="20dp"
		   android:visibility="gone"
		android:layout_below="@id/brief_actionbar"
	    >

	    <TextView
            android:id="@+id/locker_pass_enter_now_msg"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_high_desc"
		   style="@style/text_medium"
	        />
		<RelativeLayout
		   android:layout_width="match_parent"
		   android:layout_height="0dp"
		   android:layout_weight="1"
		   android:gravity="bottom"
		    >
	    <TextView
	        android:id="@+id/locker_ft_message_login"
		   android:layout_width="match_parent"
		   android:layout_height="40dp"
		   android:padding="10dp"
		   android:layout_gravity="center_horizontal"
		   android:gravity="center_horizontal"
		   style="@style/text_small"
	        />
        <RelativeLayout
            android:id="@+id/locker_passcode_pod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locker_ft_message_login"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            >
            <EditText
                android:id="@+id/locker_passcode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:imeOptions="flagNoExtractUi"
                />

        </RelativeLayout>
	    <Button
	        android:id="@+id/locker_btn_high_security"
	        android:layout_below="@id/locker_passcode_pod"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_login_now"
	        />
		</RelativeLayout>

	</LinearLayout>
	<ScrollView
	    android:id="@+id/locker_first_time"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		android:layout_below="@id/brief_actionbar"
	    >
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		   android:background="@color/white"
		   android:orientation="vertical"
		   android:maxWidth="400dp"
		   android:padding="20dp"
		   
	    >
	    <TextView
            android:id="@+id/locker_ft0"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_welcome"
		   style="@style/heading"
		   android:drawableTop="@drawable/icon"
	        />
	    <TextView
            android:id="@+id/locker_ft1"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_desc"
		   style="@style/text_medium"
		   android:paddingTop="10dp"
	        />

	    <TextView
            android:id="@+id/locker_ft5"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_high_desc"
		   style="@style/text_medium"
	        />
	    <TextView
            android:id="@+id/locker_ft6"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_high_extra"
		   style="@style/text_small"
	        />
	    <TextView

	        android:id="@+id/locker_ft_message"
		   android:layout_width="match_parent"
		   android:layout_height="20dp"
		   style="@style/text_small"
		   android:layout_gravity="center_horizontal"
		   android:gravity="center_horizontal"
	        />
	    <EditText
	        android:id="@+id/locker_first_passcode"
		   android:layout_width="150dp"
		   android:layout_height="wrap_content"
		   android:inputType="numberPassword"
		   android:layout_gravity="center_horizontal"
		   android:gravity="center_horizontal"
	        />
	    <Button
	        android:id="@+id/locker_btn_first_high_security"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:text="@string/locker_create_with"
	        />

	</LinearLayout>
	</ScrollView>
    <RelativeLayout
        android:id="@+id/locker_show_locked_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha"
		android:layout_below="@id/brief_actionbar"
        >
        <TextView
            android:id="@+id/locker_ft8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/label_loading"
            android:textSize="20sp"
            />
        <RelativeLayout
            android:id="@+id/locker_show_locked_image_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            >

        </RelativeLayout>
        <TextView
            android:id="@+id/locker_show_locked_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_back"
            android:drawableLeft="@drawable/navigation_previous_item"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="@color/white_alpha"
            />
    </RelativeLayout>
</RelativeLayout>
<LinearLayout
    android:id="@+id/locker_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"

    android:orientation="vertical"
    >
    <TextView android:id="@+id/locker_empty_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locker_empty_head"
        android:padding="20dp"
        android:paddingTop="40dp"
        />
    <TextView android:id="@+id/locker_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locker_empty_text"
        android:padding="20dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:drawableBottom="@drawable/icon_explore"
        />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/locker_empty"
        />
</LinearLayout>
<include layout="@layout/upgrade"/>
</FrameLayout>
