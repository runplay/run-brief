<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
	>

    <ImageView
        android:id="@+id/actionbar_spinner_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/actionbar_spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_toRightOf="@+id/actionbar_spinner_img"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
         />

    <TextView
        android:id="@+id/actionbar_spinner_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_spinner_text"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/actionbar_spinner_img"
        android:textColor="#AAAAAA"
        android:singleLine="true"
        android:ellipsize="end"
        />

</RelativeLayout>