<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/brief_pod"
     >
<RelativeLayout android:id="@+id/contact_thumbnail"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:padding="3dp"
     android:layout_alignParentLeft="true"
     android:layout_marginRight="5dp">

	 <RelativeLayout android:id="@+id/contact_thumbnail_alpha"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:padding="0dp"
	     android:layout_margin="0dp"
		 >
	     <ImageView
	         android:id="@+id/contact_image"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
	         />
     </RelativeLayout>
     <ImageView 
         android:id="@+id/contact_image_selected"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:background="@drawable/navigation_accept"
	     android:visibility="gone"
         />

</RelativeLayout>
<TextView
	android:id="@+id/contact_name" 
	android:layout_alignTop="@id/contact_thumbnail"
	android:layout_toRightOf="@id/contact_thumbnail"
	android:layout_width="match_parent" 
	android:layout_height="30dp"
	android:padding="2dp"
	android:textSize="20sp"
	android:textStyle="bold"
	/> 
<TextView
	android:id="@+id/contact_number"
	android:layout_width="match_parent"
	android:layout_height="20dp"
	android:textColor="#343434" 
	android:textSize="12sp"
	android:paddingLeft="2dp"
	android:layout_marginTop="30dp"
	android:layout_toRightOf="@id/contact_thumbnail"
	/>
<TextView 
	android:id="@+id/contact_email"
	android:layout_width="match_parent"
	android:layout_height="20dp"
	android:textColor="#343434"
	android:textSize="12sp"
	android:paddingLeft="2dp"
	android:layout_toRightOf="@id/contact_thumbnail"
	android:layout_marginTop="50dp"
	/>

</RelativeLayout>