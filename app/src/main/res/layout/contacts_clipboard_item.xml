 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:padding="0dp"
     android:layout_margin="0dp"
     android:paddingLeft="3dp"
     >
<ImageView
    android:id="@+id/contacts_clip_item_icon"
     android:layout_width="38dp"
     android:layout_height="38dp"
    android:visibility="gone"
    />
<TextView 
    android:id="@+id/contacts_clip_item_text"
         android:layout_width="match_parent"
     android:layout_height="20dp"
    android:ellipsize="none"
    android:singleLine="true"
    android:layout_toRightOf="@id/contacts_clip_item_icon"
    android:paddingLeft="5dp"
    />
 <TextView
     android:id="@+id/contacts_clip_item_data"
     android:layout_width="match_parent"
     android:layout_height="15dp"
     android:ellipsize="end"
     android:singleLine="true"
     style="@style/text_small"
     android:layout_toRightOf="@id/contacts_clip_item_icon"
     android:layout_below="@id/contacts_clip_item_text"
     android:paddingLeft="5dp"
     />
 </RelativeLayout>

