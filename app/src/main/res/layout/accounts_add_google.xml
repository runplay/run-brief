<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_google_accounts_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/settings_google_accounts_overlay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_add_email"
            android:drawableTop="@drawable/app_gmail"
            android:gravity="center_horizontal"
            />
        <ProgressBar
            android:id="@+id/google_progress_bar"
            android:layout_below="@id/settings_google_accounts_overlay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
</RelativeLayout>