<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    >
<TextView
    android:id="@+id/contact_view_email"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingLeft="2dp"
    android:layout_marginTop="10dp"
    android:drawableLeft="@drawable/i_email"
    />

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    >

    <ImageButton
        android:id="@+id/contact_view_fb_messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_fbmessenger"
        android:visibility="gone"
        android:layout_margin="5dp"
        />

    <ImageButton
        android:id="@+id/contact_view_email_gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_gmail"
        android:visibility="gone"
        android:layout_margin="5dp"
        />

    <ImageButton
        android:id="@+id/contact_view_email_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i_email"
        android:visibility="gone"
        android:layout_margin="5dp"
        />
</LinearLayout>
</LinearLayout>