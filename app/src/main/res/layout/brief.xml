<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"

    android:id="@+id/home_layout"
    android:clickable="true"
	 >
	 <LinearLayout 
	     android:id="@+id/bview_tabs"
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:orientation="horizontal"
	     android:baselineAligned="false"

	     >
		<RelativeLayout 
		     android:id="@+id/bview_rate_negative"
		     android:layout_width="0dp"
		     android:layout_height="wrap_content"
		     android:layout_weight="1"
		    >
		     <ImageView
		         android:id="@+id/bview_rate_negative_img"
		         android:layout_centerInParent="true"
			     android:layout_width="wrap_content"
			     android:layout_height="40dp"
				 android:src="@drawable/content_read"
				 
		         />
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/bview_rate_none"
		     android:layout_width="0dp"
		     android:layout_height="wrap_content"
		     android:layout_weight="1"
		    >
		     <ImageView
		         android:id="@+id/bview_rate_none_img"
		         android:layout_centerInParent="true"
			     android:layout_width="wrap_content"
			     android:layout_height="40dp"
				android:src="@drawable/rate_none"
		         />
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/bview_rate_positive"
		     android:layout_width="0dp"
		     android:layout_height="wrap_content"
		     android:layout_weight="1"
		    >
		     <TextView  
		         android:id="@+id/bview_positive_count"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:background="@color/grey"
			     android:textColor="@color/white"
			     android:layout_alignParentTop="true"
			     android:layout_alignParentRight="true"
			     android:paddingLeft="4dp"
			     android:paddingRight="2dp"
		         />
		     <ImageView
		         android:id="@+id/bview_rate_positive_img"
		         android:layout_centerInParent="true"
			     android:layout_width="wrap_content"
			     android:layout_height="40dp"
				android:src="@drawable/rate_positive"
				
		         />
		</RelativeLayout>
	 </LinearLayout>
	<ListView android:id="@+id/brief_home_list"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	   android:layout_below="@id/bview_tabs"
	   	   android:divider="@null"
	   android:dividerHeight="0dp"
	   
	/>
<RelativeLayout 
	 android:id="@+id/controlbrief"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_alignParentBottom="true"
 	android:layout_gravity="top|right"
 	android:gravity="top|right"
 	android:layout_below="@id/bview_tabs"
 	android:alpha="0.8"
    android:visibility="gone"
    >
    <RelativeLayout 
        android:id="@+id/controllerbrief"
      	android:layout_width="80dp"
	 	android:layout_height="80dp"
	 	android:paddingTop="10dp"
	 	android:layout_alignParentRight="true"
	 	android:background="@drawable/main_control_top_right"
	 	
        >
        <RelativeLayout 

      	android:layout_width="60dp"
	 	android:layout_height="60dp"
	 	android:layout_alignParentRight="true"
	 	android:layout_alignParentTop="true"
        >
    <RelativeLayout 

      	android:layout_width="wrap_content"
	 	android:layout_height="wrap_content"
	 	android:background="@drawable/main_control"
	 	android:gravity="center"
        >
    <ImageView 
        
        android:id="@+id/controller_mainbrief"
        android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		
		
        />
    <TextView
        android:id="@+id/cotroller_main_txt"
        android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
	 	android:textSize="16sp"
	 	android:paddingTop="5dp"
	 	android:paddingLeft="10dp"
        />
    </RelativeLayout>
    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
<LinearLayout 
    android:id="@+id/brief_wait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/background" 
    android:visibility="gone"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon"
        />
	<TextView 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_loading"
        android:layout_gravity="center"
	    />
</LinearLayout>
<RelativeLayout
		    android:id="@+id/brief_empty_star"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:padding="10dp"
		    android:visibility="gone"
	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
	    android:layout_marginTop="35dp"
		    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/bh_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_data_brief_star_head"
            style="@style/field_title"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/rate_positive"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brief_home_no_data_important"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/bh_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_data_brief_star"
            android:gravity="center"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/rate_none"
            android:drawableRight="@drawable/content_read"
            />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<RelativeLayout
		    android:id="@+id/brief_empty_ignore"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:padding="10dp"
		    android:visibility="gone"

	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
			android:layout_marginTop="35dp"

		    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/bh_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_brief_none_head"
                style="@style/field_title"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:drawableTop="@drawable/content_read"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/brief_home_no_data_read"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bh_txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_brief_none"
                android:gravity="center"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/rate_none"
                android:drawableRight="@drawable/rate_positive"
                />
            </LinearLayout>
        </ScrollView>

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/brief_empty_inbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="gone"

        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="35dp"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/bh_txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_brief_inbox_head"
                    style="@style/field_title"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:drawableTop="@drawable/content_read"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/welcome_features"
                    />
                <TextView
                    android:id="@+id/bh_txt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_brief_inbox"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/rate_none"
                    android:drawableRight="@drawable/rate_positive"
                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
