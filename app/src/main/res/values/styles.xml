<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryDark">@color/brand</item>
        <item name="actionBarDivider">@null</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
        <item name="android:dialogTitle">@style/DialogWindowTitle_Custom</item>

    </style>
    <style name="DialogWindowTitle_Custom" parent="AlertDialog.AppCompat">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance_DialogWindowTitle</item>
    </style>
    <style name="TextAppearance_DialogWindowTitle" parent="DialogWindowTitle_Custom">
        <item name="android:textColor">@color/brand</item>
        <item name="android:textStyle">bold</item>
    </style>
