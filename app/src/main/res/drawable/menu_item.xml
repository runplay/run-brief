<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
      <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
   </item>
   <item android:top="-6dp" android:bottom="0dp" android:left="-6dp" android:right="-6dp"> 
      <shape 
        android:shape="rectangle">
        
            <padding android:left="0dp"
                   android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke android:width="6dp" android:color="@color/actionbar_brief_message" />
            <solid android:color="#00000000" />
        </shape>
   </item>
   <item android:top="0dp" android:bottom="-1dp" android:left="0dp" android:right="-6dp"> 
      <shape 
          android:shape="rectangle">

            <stroke android:width="1dp" android:color="#33000000" />
            <solid android:color="#00000000" />
        </shape>
   </item>
</layer-list>