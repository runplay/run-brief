<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:baselineAligned="false"
    >

   <LinearLayout 
	   android:orientation="vertical"
	   android:layout_height="wrap_content"
	   android:layout_width="150dp"
    >

	<ImageView 
		android:id="@+id/btn_camera_open_instagram"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/iinstagram"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		/>
	<run.brief.b.bButton 
		android:id="@+id/btn_camera_open_note"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/label_note"
		android:drawableTop="@drawable/i_note"
		android:layout_marginLeft="10dp"
		android:layout_gravity="center_horizontal"
		/>
	<run.brief.b.bButton 
		android:id="@+id/btn_camera_open_email"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/label_email"
		android:drawableTop="@drawable/i_email"
		android:layout_marginLeft="10dp"
		android:layout_gravity="center_horizontal"
		/>


	</LinearLayout>
   <LinearLayout 
	   android:orientation="vertical"
	   android:layout_height="match_parent"
	   android:layout_width="0dp"
	   android:layout_weight="1"
	   android:background="@color/grey" 
    >
	   <LinearLayout 
	   android:orientation="horizontal"
	   android:layout_height="wrap_content"
	   android:layout_width="match_parent"
	    style="@style/border_bottom_only"
    	>
		   <LinearLayout 
		   android:orientation="vertical"
		   android:layout_height="wrap_content"
		   android:layout_width="0dp"
		   android:layout_weight="1"
		  
	    	>
			  <TextView 
			      android:id="@+id/camera_info_file_name"
			      android:layout_height="wrap_content" 
			      android:layout_width="match_parent" 
			      style="@style/text_medium"
			      android:paddingLeft="10dp"
			
			      />
			  <TextView 
			      android:id="@+id/camera_info_file_path"
			      android:layout_height="wrap_content" 
			      android:layout_width="match_parent" 
			      style="@style/text_small"
			      android:paddingLeft="10dp"
			
			      />
			  <TextView 
			      android:id="@+id/camera_info_data"
			      android:layout_height="wrap_content" 
			      android:layout_width="match_parent" 
			      
			      android:paddingLeft="10dp"
			
			      />
 		</LinearLayout>
		<ImageView
		    android:id="@+id/btn_camera_folder"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/collections_collection"
		    android:layout_gravity="center"
		    android:layout_marginRight="20dp"
		    android:layout_marginLeft="20dp"
		    />
  	</LinearLayout>
	<RelativeLayout 
	    android:layout_height="match_parent" 
	    android:layout_width="match_parent" 
	    
	    android:padding="10dp"
	    >
	<ImageView 
	    android:layout_height="wrap_content" 
	    android:layout_width="match_parent" 
	    android:visibility="visible"
	    android:id="@+id/imageView1" />
	<VideoView 
	    android:layout_height="wrap_content" 
	    android:layout_width="match_parent" 
	    android:visibility="invisible"
	    android:id="@+id/videoView1" />
	</RelativeLayout>
	</LinearLayout>
</LinearLayout>
